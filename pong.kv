
<PongBall>:
    size:50,50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
            source: "ball.png"
<PongPaddle>:
    size:25,150
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "paddle.jpg"


<PongoGame>:
    ball : pong_ball
    player1 : player_left
    player2 : player_right

    canvas:
        Rectangle:
            pos: self.center_x - 5,0
            size: 10,self.height
    PongBall:
        id: pong_ball

        center : self.parent.center
    Label:
        font_size:70
        center_x: root.width /4
        top: root.top-50
        text: str(root.player1.score)
    Label:
        font_size:70
        center_x: root.width*3/4
        top: root.top-50
        text: str(root.player2.score)
    Label:
        font_size:20
        center_x: root.width /6
        top: root.top-20
        text: "Player 1"
    Label:
        font_size:20
        center_x: root.width*4/6
        top: root.top-20
        text: "Player 2"

    PongPaddle:
        id : player_left
        x : root.x
        center_y : root.center_y
    PongPaddle:
        id : player_right
        x : root.width - self.width
        center_y : root.center_y
    Label:
        id: result
        font_size:50
        center: root.center
        text: " "

